<div class="container">
  <div class="row">
    <% @reports.each do |report| %>
      <div class="col-md-3">
        <%= link_to my_page_path(report.customer) do %>
          <%= attachment_image_tag report.customer, :profile_image, :fill, 200, 200, fallback:"no-image-icon.jpg" %>
          <%= report.customer.name %></ul>
        <% end %>
        <div style="font-size: 2px;"><%= report.created_at.strftime('%Y/%m/%d  %H:%M:%S') %></div>
        <figure><%= attachment_image_tag report, :image, :fill, 200, 200 %></figure>
        <div class="relative-post-evaluation">
          <span>評価：</span>
          <span id="star-rate-<%= report.id %>"></span>
            <script>
              $('#star-rate-<%= report.id %>').raty({
                size: 36,
                starOff: "<%= asset_path('star-off.png') %>",
                starOn: "<%= asset_path('star-on.png') %>",
                starHalf: "<%= asset_path('star-half.png') %>",
                half: true,
                readOnly: true,
                score: <%= report.evaluation %>,
              });
            </script>
            <%= report.evaluation %>
        </div>
          <%= report.impression %>
      </div>
    <% end %>
  </div>
  <div class="row">
     <%= link_to "レシピに戻る", recipe_path(@recipe) %>
  </div>
</div>





