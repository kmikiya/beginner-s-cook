<div class="container">
  <div class="mt-4">
    <h2>ブックマーク</h2>
  </div>
  <div class="row mt-3 mb-3 justify-content-around">
  <% @favorites.each do |favorite| %>
    <div class="col-md-5 card mt-3 mb-3 pr-3 shadow-lg" style="width: 50%;">
      
      <%= link_to recipe_path(favorite.recipe) do %>
        <div class="d-flex justify-content-center pb-1 pt-4">
          <%= attachment_image_tag favorite.recipe, :image, :fill, 200, 200, size: '300x300' %>
        </div>

        <div class="d-flex justify-content-center mb-1"><strong><%= favorite.recipe.title %></strong></div>
      <% end %>
      <div class="d-flex justify-content-center pb-4"><%= favorite.recipe.comment %></div>
    </div>
  <% end %>
  </div>

</div>







