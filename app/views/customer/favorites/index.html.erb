<div class="container-fluid ml-3 mr-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="row mt-3 mb-3 justify-content-center">
          <div class="border-top border-bottom text-center" style="width: 60%; border-color:#708090;">
            <h5 class="mt-2 top-title-font" style="font-size: 30px;">ブックマーク</h5>
          </div>
      </div>
        <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-md-6 mb-5">
              <%= link_to recipe_path(favorite.recipe) do %>
                <div class="text-center">
                  <div class="title-font-color"  style="font-size: 30px;">
                    <strong>
                      <%= favorite.recipe.title.truncate(14) %>
                    </strong>
                  </div>
                </div>
              <% end %>
                <div class="date-potition", style="font-size: 5px;"><%= favorite.recipe.created_at.strftime('%Y/%m/%d  %H:%M:%S') %></div>
              <%= link_to recipe_path(favorite.recipe) do %>
                <%= attachment_image_tag favorite.recipe, :image, fallback:"no_bg_image.jpg", class: "recipe-img-create img-fluid rounded center-img" %>
              <% end %>

            </div>
          <% end %>
        </div>
      <div class="row justify-content-center">
        <div class="col-md-4">
          <%= paginate @favorites, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>





