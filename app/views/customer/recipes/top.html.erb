<div class="container">
  <div class="mt-3 mb-3">
    <h2>評価が高いレシピ</h2>
  </div>
  <div class="row mb-5">
    <% @reports.each do |report| %>
      <div class="col-md-4">
        <%= attachment_image_tag report.recipe, :image, fallback:"no_bg_image.jpg", class: "img-fluid recipe-img" %>
        <%= link_to recipe_path(report.recipe) do %>
          <div><%= report.recipe.title %></div>
        <% end %>
        <div><%= report.recipe.comment %></div>
        <span id="star-rate-average_<%= report.recipe.id %>"></span>
        (<%= report.evaluation_avg.round(1) %>点)
        <script>
          $('#star-rate-average_<%= report.recipe.id %>').empty();
          $('#star-rate-average_<%= report.recipe.id %>').raty({
            size: 36,
            starOff: "<%= asset_path('star-off.png') %>",
            starOn: "<%= asset_path('star-on.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            half: true,
            readOnly: true,
            score: <%= report.evaluation_avg.round(1) %>,
          });
        </script>
      </div>

    <% end %>
  </div>

  <div class="mt-3 mb-3">
    <h2>新着レシピ</h2>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
        <div class="col-md-4">
          <div><%= attachment_image_tag recipe, :image, :fill, 200, 200, fallback:"no_bg_image.jpg", class: "img-fluid recipe-img" %></div>
          <%= link_to recipe_path(recipe) do %>
            <div><%= recipe.title %></div>
          <% end %>
          <div><%= recipe.comment %></div>
        </div>
    <% end %>
  </div>

  <div class="mt-3 mb-3">
    <h2>よく閲覧されるレシピ</h2>
  </div>
  <div class="row">
    <%  @recipe_pvs.each do |recipe| %>
        <div class="col-md-4">
          <div><%= attachment_image_tag recipe, :image, :fill, 200, 200, fallback:"no_bg_image.jpg", class: "img-fluid recipe-img" %></div>
          <%= link_to recipe_path(recipe) do %>
            <div><%= recipe.title %></div>
          <% end %>
          <div><%= recipe.comment %></div>
        </div>
    <% end %>
  </div>

</div>